{
    "manifest_version": 3,
    "name": "MailBot",
    "version": "1.0",
    "description": "An AI bot that answers your email queries.",
    "permissions": ["identity", "storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "oauth2": {
      "client_id": "819874015583-em8hjl9n9m2mh8ttglji88vbe8rg6c3n.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }